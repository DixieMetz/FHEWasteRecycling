# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Sepolia Testnet RPC URL
# Get from: https://www.alchemy.com/ or https://infura.io/
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key

# Zama fhEVM Devnet RPC URL
ZAMA_RPC_URL=https://devnet.zama.ai

# Mainnet RPC URL (for production deployment)
# MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================

# Private Key (DO NOT commit your actual private key!)
# Get from MetaMask: Account Details > Export Private Key
# IMPORTANT: Never share or commit this key
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Mnemonic (alternative to private key)
# MNEMONIC=your twelve word mnemonic phrase here

# Contract Owner Address
OWNER_ADDRESS=0x0000000000000000000000000000000000000000

# Pauser Address (for emergency pause functionality)
# This address can pause contract operations in case of emergency
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Emergency Contact Address
EMERGENCY_CONTACT=0x0000000000000000000000000000000000000000

# ===========================================
# API KEYS & VERIFICATION
# ===========================================

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API Key for gas reporting (optional)
# Get from: https://pro.coinmarketcap.com/account
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Alchemy API Key (optional, for enhanced RPC features)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API Key (optional, alternative RPC provider)
INFURA_API_KEY=your_infura_api_key_here

# ===========================================
# PERFORMANCE & OPTIMIZATION
# ===========================================

# Gas Reporting
REPORT_GAS=true

# Gas Price (in gwei) - Set for deployment cost estimation
GAS_PRICE=20

# Gas Limit (optional, for deployment transactions)
GAS_LIMIT=8000000

# Compiler Optimization Runs (affects bytecode size vs gas cost)
# Higher runs = more expensive deployment, cheaper execution
OPTIMIZER_RUNS=800

# ===========================================
# SECURITY FEATURES
# ===========================================

# Enable/Disable Security Checks
SECURITY_CHECKS_ENABLED=true

# DoS Protection - Maximum gas limit per transaction
MAX_GAS_LIMIT=5000000

# Rate Limiting - Maximum transactions per block
MAX_TX_PER_BLOCK=10

# Access Control Mode (strict/normal/permissive)
ACCESS_CONTROL_MODE=strict

# Emergency Pause Enabled
EMERGENCY_PAUSE_ENABLED=true

# Timelock Duration (in seconds) for sensitive operations
TIMELOCK_DURATION=86400

# ===========================================
# MONITORING & ALERTS
# ===========================================

# Codecov Token (for coverage reporting)
CODECOV_TOKEN=your_codecov_token_here

# Sentry DSN (for error tracking, optional)
SENTRY_DSN=your_sentry_dsn_here

# Monitoring Webhook URL (for alerts)
MONITORING_WEBHOOK_URL=https://your-webhook-url.com/alerts

# Log Level (error/warn/info/debug)
LOG_LEVEL=info

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Deployed Contract Address (populated after deployment)
CONTRACT_ADDRESS=

# Deployment Network (sepolia/mainnet/localhost)
DEPLOYMENT_NETWORK=sepolia

# Deployment Environment (development/staging/production)
DEPLOYMENT_ENV=development

# Auto-verify on Etherscan after deployment
AUTO_VERIFY=true

# ===========================================
# FHE (Fully Homomorphic Encryption) CONFIG
# ===========================================

# FHE Network URL
FHE_NETWORK_URL=https://devnet.zama.ai

# FHE Contract Address (if using pre-deployed FHE contracts)
FHE_CONTRACT_ADDRESS=

# FHE Public Key
FHE_PUBLIC_KEY=

# ===========================================
# TESTING CONFIGURATION
# ===========================================

# Test Network (hardhat/localhost/sepolia)
TEST_NETWORK=hardhat

# Test Coverage Threshold (percentage)
COVERAGE_THRESHOLD=90

# Run Tests in Parallel
PARALLEL_TESTS=true

# Test Timeout (milliseconds)
TEST_TIMEOUT=40000

# ===========================================
# CI/CD CONFIGURATION
# ===========================================

# GitHub Token (for CI/CD)
GITHUB_TOKEN=your_github_token_here

# CI/CD Environment
CI=false

# Skip Prompts in CI
CI_SKIP_PROMPTS=true

# ===========================================
# ADVANCED FEATURES
# ===========================================

# Enable Experimental Features
EXPERIMENTAL_FEATURES=false

# Debug Mode
DEBUG=false

# Verbose Logging
VERBOSE=false

# Enable Contract Size Optimization
SIZE_OPTIMIZATION=true

# Enable Via-IR Compilation (more aggressive optimization)
VIA_IR=false

# ===========================================
# NOTES
# ===========================================
# 1. Copy this file to .env and fill in your values
# 2. NEVER commit .env file to version control
# 3. Keep your private keys and API keys secure
# 4. Use different keys for testnet and mainnet
# 5. Rotate keys regularly for security
# 6. Use hardware wallets for mainnet deployments
# 7. Enable multi-sig for production contracts
# 8. Test thoroughly on testnet before mainnet deployment
